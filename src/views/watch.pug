extends base.pug

block content
    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl, controls) 
        div#videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
            div.videoControls__volume
                span#mute
                    i.fas.fa-volume-up
                div.videoControls__volume-bar
                    input#volume(type="range", min=0, max=1, step="0.1", value=0.5)
            div.videoControls__time
                span#currentTime 00:00
                span  / 
                span#totalTime 00:00
            div 
                input#timeline(type="range", min=0, step="1", value=0)
            div 
                span#fullScreen 
                    i.fas.fa-expand

    div.video__data
        p.video__title=video.title
        small.video__owner Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.name
        small.video__createdAt=video.createAt
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;

    if loggedIn
        .video__add-comments 
            form.video__comment-form#commentForm
                textarea(cols="20", rows="10", placeholder="Write a Comment...")
                button Add Comment
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    i.fas.fa-comment
                    span  #{comment.text}
                    span ‚ùå

block scripts 
    script(src="/assets/js/videoPlayer.js") 
    if loggedIn 
        script(src="/assets/js/commentSection.js") 