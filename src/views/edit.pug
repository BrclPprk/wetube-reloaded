extends base

block content 
    h4 Update Video
    form(method="POST") 
        input(name="title", placeholder="Video Title", value=video.title, required)
        input(name="description" placeholder="Description", value=video.description, required, type="text")
        input(name="hashtags" placeholder="Hashtags, separated by comma (,)", value=video.hashtags ? video.hashtags.join() : '',  type="text")
        input(value="save", type="submit")