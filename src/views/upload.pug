extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST", action="/videos/upload", enctype="multipart/form-data") 
        label(for="video") Video File 
        input(type="file", id="video", name="video", required, accept="video/*") 
        input(name="title" placeholder="Title", required, type="text")
        input(name="description" placeholder="Description", required, type="text")
        input(name="hashtags" placeholder="Hashtags, separated by comma (,)", type="text")
        input(type="submit", value="Upload")